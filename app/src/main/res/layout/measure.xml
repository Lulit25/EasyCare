<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="318dp"
        android:layout_height="155dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"

        android:padding="10dp"
        android:columnCount="2"
        android:background="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="170dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:id="@+id/card_view1"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="78dp"

                    android:src="@drawable/heartrate"
                    android:contentDescription="measure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measure_heart_rate"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:id="@+id/card_view2"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="10dp"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="78dp"

                    android:src="@drawable/temp"
                    android:contentDescription="temp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measure_temperature"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:id="@+id/card_view3"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="10dp"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:src="@drawable/bp"
                    android:contentDescription="BP" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measure_bp"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:id="@+id/card_view4"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="10dp"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:src="@drawable/bmicalculator"
                    android:contentDescription="BMI" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measure_bmi"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>